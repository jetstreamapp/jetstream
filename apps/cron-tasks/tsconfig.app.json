{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "outDir": "../../dist/out-tsc",
    "target": "esnext",
    "types": ["node", "google.accounts", "google.picker", "gapi.auth2"],
    "jsx": "react"
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ],
  "include": ["**/*.ts"]
}
