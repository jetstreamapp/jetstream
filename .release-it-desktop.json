{
  "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "ignoreRecommendedBump": true
    },
    "@release-it/bumper": {
      "in": "apps/jetstream-desktop/package.json",
      "out": "apps/jetstream-desktop/package.json"
    }
  },
  "git": {
    "changelog": "git log --pretty=format:\"* %s (%h)\" $(git describe --tags --abbrev=0 --match='desktop-v*' 2>/dev/null || echo '')...${to}",
    "tagAnnotation": "Release desktop ${version}",
    "commitMessage": "chore: release desktop ${version}",
    "tag": true,
    "tagName": "desktop-v${version}"
  },
  "npm": false,
  "github": {
    "release": true,
    "releaseName": "Jetstream Desktop ${version}"
  },
  "hooks": {
    "before:init": ["yarn test:all"],
    "after:bump": ["npx prettier --write apps/jetstream-desktop/package.json"],
    "after:release": "echo Successfully released ${name} v${version}."
  }
}
