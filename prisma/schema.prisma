// SSO Configuration Tables

model SamlConfiguration {
  id                 String             @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name               String             @default("SAML Configuration") @db.VarChar(255)
  loginConfigId      String             @unique @db.Uuid
  loginConfiguration LoginConfiguration @relation(fields: [loginConfigId], references: [id], onDelete: Cascade)

  // Service Provider (SP) Configuration - Jetstream
  entityId        String // SP entity ID (e.g., "jetstream-team-{teamId}")
  acsUrl          String // Assertion Consumer Service URL
  singleLogoutUrl String? // Single Logout URL (optional)

  // Identity Provider (IdP) Configuration
  idpEntityId    String // IdP entity ID
  idpSsoUrl      String // IdP SSO URL (where to redirect for login)
  idpCertificate String  @db.Text // X.509 certificate for signature validation
  idpMetadataXml String? @db.Text // Full IdP metadata (if uploaded)
  idpMetadataUrl String? @db.Text // URL to IdP metadata XML (can use for auto-refresh of certificate)

  // SAML Options
  nameIdFormat         String  @default("urn:oasis:names:tc:SAML:1.1:nameid-format:emailAddress")
  signRequests         Boolean @default(false)
  wantAssertionsSigned Boolean @default(true)

  // Jetstream SP Certificate/Key (for signing requests if needed)
  spCertificate String? @db.Text
  spPrivateKey  String? @db.Text // Encrypted with JETSTREAM_AUTH_SSO_SECRET

  // Attribute Mapping (SAML attributes -> Jetstream user fields)
  attributeMapping Json // { email: "email", firstName: "firstName", lastName: "lastName" }

  // Parsed from idpCertificate for expiration notifications (populated on save)
  idpCertificateExpiresAt DateTime? // can use to notify admins of upcoming IdP certificate expiration

  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  authIdentities AuthIdentity[]

  @@map("sso_saml_configurations")
}

model OidcConfiguration {
  id                 String             @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name               String             @default("OIDC Configuration") @db.VarChar(255)
  loginConfigId      String             @unique @db.Uuid
  loginConfiguration LoginConfiguration @relation(fields: [loginConfigId], references: [id], onDelete: Cascade)

  // OIDC Provider Configuration
  issuer       String // OIDC issuer URL
  clientId     String // OAuth client ID
  clientSecret String // Encrypted with JETSTREAM_AUTH_SSO_SECRET

  // OIDC Endpoints (can be auto-discovered)
  authorizationEndpoint String
  tokenEndpoint         String
  userinfoEndpoint      String?
  jwksUri               String
  endSessionEndpoint    String? // For logout

  // OIDC Options
  scopes       String[] @default(["openid", "email", "profile"])
  responseType String   @default("code")

  // Attribute Mapping (OIDC claims -> Jetstream user fields)
  attributeMapping Json // { email: "email", firstName: "given_name", lastName: "family_name" }

  createdAt      DateTime       @default(now())
