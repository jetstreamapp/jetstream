  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to API Server",
      "type": "node",
      "request": "attach",
      "port": 7777,
      "sourceMaps": true,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to API Server (prod mode)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "sourceMaps": true,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to API Server (Docker)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "remoteRoot": "/usr/src/app",
      "sourceMaps": true,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Job Worker",
      "type": "node",
      "request": "attach",
      "port": 7778,
      "sourceMaps": true,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Attach to Electron",
      "type": "node",
      "request": "attach",
      "port": 9229,
